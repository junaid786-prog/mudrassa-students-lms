<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/task_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#79FAD4"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/edit_task_roll_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bsef20a511"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/edit_task_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="22-02-2023"
            android:textColor="#303F9F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_task_sabaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Aya 1 - 5"
            android:textColor="#200901" />

        <TextView
            android:id="@+id/edit_task_sabaqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="before para 1"
            android:textColor="#1E0101" />

        <TextView
            android:id="@+id/edit_task_manzal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="1 - 22 para"
            android:textColor="#220202" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>